{% extends "::base.html.twig" %}

{% block title %}Моделі Амортизатори, Пружини, Поперечниі важілья{% endblock %}
{% block description %}Моделі Амортизатори, Пружини, Поперечниі важілья{% endblock %}

{% block body %}

    <div class="text-center">
        <h1>Моделі</h1>
    </div>
    <br/>

    <div class="text-marning">

        {% set isEnd = 1 %}
        {% set i = 0 %}
        {% set len = modelMenus|length %}

        {% set r1 = -1 %}
        {% set r2 = 0 %}
        {% set r3 = 0 %}

        {% set r1t = -1 %}
        {% set r2t = 0 %}

        {% for k in 0..len-1 %}
            {% set r1t = k % 3 == 0 ? r1t + 1 : r1t %}
            {% set r2t = k % 3 == 1 ? r2t + 1 : r2t %}
        {% endfor %}


        <table style="width:100%">

            {% for k in 0..len-1 %}

                {% set r1 = i % 3 == 0 ? r1 + 1 : r1 %}
                {% set r2 = i % 3 == 1 ? r2 + 1 : r2 %}
                {% set r3 = i % 3 == 2 ? r3 + 1 : r3 %}

                {% set id = i % 3 == 0 ? r1 : (i % 3 == 1 ? r2 + r1t : (i % 3 == 2 ? r3 + r1t + r2t : 0))  %}

                {% if i % 3 == 0 %}
                    <tr>
                    {% set isEnd = 0 %}
                {% endif %}

                    <td>
                        <div class="marning-smoll"><a
                                    href="{{ path('products_autos', { 'model_id': modelMenus[id].id }) }}">{{ modelMenus[id].name }}</a>
                        </div>
                    </td>

                {% if i % 3 == 2 %}
                    </tr>
                    {% set isEnd = 1 %}
                {% endif %}

                {% set i = i + 1 %}
            {% endfor %}

            {% if isEnd == 0 %}
                </tr>
            {% endif %}

        </table>

    </div>
    <br/><br/><br/><br/>


{% endblock %}
