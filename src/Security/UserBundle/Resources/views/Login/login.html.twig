{% extends "::base.html.twig" %}

{% block title %}SecurityUserBundle:Login:login{% endblock %}

{% block body %}

    <div class="login-box-body">
        <p class="login-box-msg">Sign in to start your session</p>
        <form action="{{ path('security_user_login_check') }}"  method="post">
            <div class="form-group has-feedback">
                <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" placeholder="Email or username">
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                <input type="text" class="form-control" name="_password" placeholder="Password">
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
            <div class="row">
                <div class="col-xs-8">
                    <div class="checkbox icheck">
                        <label>
                            <input type="checkbox"> Remember Me
                        </label>
                    </div>
                </div><!-- /.col -->
                <div class="col-xs-4">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
                </div><!-- /.col -->
            </div>
        </form>

        {% if error is defined and error %}
            <div class="container col-md-6 col-lg-6 col-sm-12 col-xs-12" style="width:100%;margin:20px;background: #337AB7;color: white;border-radius: 2px;font-size: 18px;">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}
        {#<a href="#">I forgot my password</a><br>#}
        {#<a href="register.html" class="text-center">Register a new membership</a>#}

    </div>
    
<script>
    $(function () {
        $('input').iCheck({
            checkboxClass: 'icheckbox_square-blue',
            radioClass: 'iradio_square-blue',
            increaseArea: '20%' // optional
        });
    });
</script>

{% endblock %}
