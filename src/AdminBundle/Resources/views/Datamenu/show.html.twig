{% extends 'base.html.twig' %}

{% block body %}
    <h1>Datamenu</h1>

    <table>
        <tbody>
            <tr>
                <th>Modelmenuid</th>
                <td>{{ dataMenu.modelMenuId }}</td>
            </tr>
            <tr>
                <th>Automenuid</th>
                <td>{{ dataMenu.autoMenuId }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ dataMenu.name }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ dataMenu.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('datamenu_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('datamenu_edit', { 'id': dataMenu.id }) }}">Edit</a>
        </li>
